extend ../layout

block brand
    if item_name
        | #{item_name}
block content
    if can_add
        a.btn.btn-primary(href="/#{space}/notification-group/templates/#{group_id}/create")
            i.fa.fa-plus
            span &nbsp;#{__('New Template')}
        a.btn.btn-primary(href="/#{space}/notification/groups", style="margin-left: 12px;")
            i.fa.fa-arrow-left
            span &nbsp;#{__('Back to Groups')}
    div.panel.colourable.mar_u20
        div.panel-body
            if data
                if data.length > 0
                    table.table.table-hover
                        thead
                            tr
                                th #{__('Name')}
                                th #{__('Message')}
                                if can_edit
                                    th
                        tbody
                            each row in data
                                tr
                                    td #{row.title}
                                    td #{row.message}
                                    if can_edit
                                        td
                                            a(href="/#{space}/notification-group/templates/#{group_id}/edit/#{row.id}")
                                                i.fa.fa-edit
                                                span &nbsp;#{__('Edit')}
                                            a(href="/#{space}/notification-group/templates/#{group_id}/delete/#{row.id}", style="display: inline-block; margin-left: 10px;")
                                                i.fa.fa-remove
                                                span &nbsp;#{__('Delete')}
                else
                    div
                        h3 No Records Found